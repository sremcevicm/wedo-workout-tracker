FROM node:22-alpine AS build
WORKDIR /app

COPY src/WorkoutTracker.Web/package*.json ./
RUN npm ci

COPY src/WorkoutTracker.Web/ .

ARG VITE_API_URL=/api
ENV VITE_API_URL=$VITE_API_URL

RUN npm run build

FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html
COPY src/WorkoutTracker.Web/nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
